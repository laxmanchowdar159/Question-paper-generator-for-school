{
  "system_name": "ExamCraft Competitive Exam Engine",
  "version": "2.0",
  "input_required": ["exam_type", "class", "marks"],

  "competitive_exams": {

    "NTSE": {
      "mode": "dynamic_scaling",
      "default_total_marks": 200,
      "paper_structure": {

        "MAT": {
          "weight_percentage": 50,
          "question_type": "MCQ",
          "options": 4,
          "topics": [
            "Analogy",
            "Series (Number, Letter, Figure)",
            "Classification",
            "Coding-Decoding",
            "Blood Relations",
            "Direction & Distance",
            "Ranking",
            "Clock & Calendar",
            "Mirror/Water Image",
            "Embedded Figures"
          ]
        },

        "SAT": {
          "weight_percentage": 50,
          "question_type": "MCQ",
          "options": 4,
          "subject_distribution_percentage": {
            "Science": 40,
            "Social_Science": 40,
            "Mathematics": 20
          }
        }
      },

      "marking_rules": {
        "Stage_1": { "correct": 1, "wrong": 0 },
        "Stage_2": { "correct": 1, "wrong": -0.33 }
      },

      "calculation_formula": {
        "MAT_marks": "round(total_marks * 0.50)",
        "SAT_marks": "total_marks - MAT_marks",
        "SAT_subject_split": "round(SAT_marks * subject_percentage / 100)"
      }
    },

    "NSO": {
      "mode": "dynamic_scaling",
      "default_total_marks": 60,

      "sections": [
        {
          "name": "Logical Reasoning",
          "weight_percentage": 17,
          "question_type": "MCQ",
          "marks_each": 1
        },
        {
          "name": "Science",
          "weight_percentage": 58,
          "question_type": "MCQ",
          "marks_each": 1
        },
        {
          "name": "Achiever Section",
          "weight_percentage": 25,
          "question_type": "MCQ",
          "marks_each_multiplier": 3,
          "difficulty": "high"
        }
      ],

      "marking_rules": {
        "correct": 1,
        "wrong": 0
      },

      "calculation_formula": {
        "section_marks": "round(total_marks * weight_percentage / 100)"
      }
    },

    "IMO": {
      "mode": "dynamic_scaling",
      "default_total_marks": 60,

      "sections": [
        {
          "name": "Logical Reasoning",
          "weight_percentage": 17,
          "question_type": "MCQ",
          "marks_each": 1
        },
        {
          "name": "Mathematical Reasoning",
          "weight_percentage": 42,
          "question_type": "MCQ",
          "marks_each": 1
        },
        {
          "name": "Everyday Mathematics",
          "weight_percentage": 16,
          "question_type": "MCQ",
          "marks_each": 1
        },
        {
          "name": "Achiever Section",
          "weight_percentage": 25,
          "question_type": "MCQ",
          "marks_each_multiplier": 3,
          "difficulty": "high"
        }
      ],

      "marking_rules": {
        "correct": 1,
        "wrong": 0
      },

      "calculation_formula": {
        "section_marks": "round(total_marks * weight_percentage / 100)"
      }
    },

    "IJSO_NSEJS": {
      "mode": "dynamic_scaling",
      "default_total_marks": 240,
      "question_type": "MCQ",
      "options": 4,

      "subject_distribution_percentage": {
        "Physics": 34,
        "Chemistry": 33,
        "Biology": 33
      },

      "difficulty": "very_high_application",

      "marking_rules": {
        "correct": 3,
        "wrong": -1
      },

      "calculation_formula": {
        "subject_marks": "round(total_marks * subject_percentage / 100)"
      }
    }

  }
}