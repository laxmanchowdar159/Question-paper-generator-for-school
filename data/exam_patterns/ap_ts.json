{
  "board": "AP_TS",
  "board_full_name": "AP & Telangana SSC Board (Dynamic Marks Blueprint)",
  "input_from_frontend": {
    "field_name": "marks",
    "source": "totalMarks select",
    "type": "integer",
    "description": "Total marks selected from chip buttons or custom input"
  },

  "ssc_class_9_10": {
    "scaling_model": "percentage_based",

    "distribution_logic": {
      "PART_A_OBJECTIVE": {
        "weight_percentage_of_total": 20,
        "sections": [
          {
            "section": "Section-I",
            "type": "MCQ",
            "weight_inside_partA": 50,
            "marks_each": 1
          },
          {
            "section": "Section-II",
            "type": "Fill in the Blanks",
            "weight_inside_partA": 25,
            "marks_each": 1
          },
          {
            "section": "Section-III",
            "type": "Match the Following",
            "weight_inside_partA": 25,
            "marks_each": 1
          }
        ]
      },

      "PART_B_WRITTEN": {
        "weight_percentage_of_total": 80,
        "sections": [
          {
            "section": "Section-IV",
            "type": "Very Short Answer",
            "weight_inside_partB": 25,
            "suggested_marks_each": 2,
            "choice": "no_choice"
          },
          {
            "section": "Section-V",
            "type": "Short Answer",
            "weight_inside_partB": 20,
            "suggested_marks_each": 4,
            "choice": "answer_any"
          },
          {
            "section": "Section-VI",
            "type": "Long Answer",
            "weight_inside_partB": 30,
            "suggested_marks_each": 6,
            "choice": "internal_or_choice"
          },
          {
            "section": "Section-VII",
            "type": "Application / Activity / Problem Solving",
            "weight_inside_partB": 25,
            "suggested_marks_each": 8,
            "subject_dependent": true
          }
        ]
      }
    },

    "calculation_formula": {
      "partA_marks": "round(total_marks * 0.20)",
      "partB_marks": "total_marks - partA_marks",
      "section_marks": "round(part_weight * part_marks)"
    }
  },

  "english_special_case": {
    "has_partA": false,
    "distribution": [
      { "section": "Reading", "weight_percentage": 25 },
      { "section": "Writing", "weight_percentage": 25 },
      { "section": "Grammar", "weight_percentage": 25 },
      { "section": "Literature", "weight_percentage": 25 }
    ]
  },

  "classes_6_8": {
    "model": "scaled_from_50_mark_SA",

    "distribution_logic": [
      {
        "section": "Objective",
        "weight_percentage": 20,
        "marks_each": 1
      },
      {
        "section": "Very Short Answer",
        "weight_percentage": 40,
        "marks_each": 2
      },
      {
        "section": "Short Answer",
        "weight_percentage": 20,
        "marks_each": 5
      },
      {
        "section": "Long Answer",
        "weight_percentage": 20,
        "marks_each": 8
      }
    ]
  }
}